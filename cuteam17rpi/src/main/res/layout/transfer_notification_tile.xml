<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="15dp"
    android:background="null"
    android:layout_marginTop="30dp" >

    <TextView
        android:id="@+id/app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#4f80e9"
        android:textSize="20sp"
        android:text="Unknown"/>

    <TextView
        android:id="@+id/summary_text_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/app_label"
        app:layout_constraintBottom_toBottomOf="@id/app_label"
        app:layout_constraintLeft_toRightOf="@id/app_label"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="#c6c6c6"
        android:textSize="15sp"
        android:text="@string/bullet_space"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/summary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/summary_text_spacer"
        android:textColor="#c6c6c6"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/when_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/app_label"
        app:layout_constraintLeft_toRightOf="@id/summary_text"
        app:layout_constraintBottom_toBottomOf="@id/app_label"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="#c6c6c6"
        android:textSize="15sp"
        android:text="@string/bullet_space"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/when_spacer"
        android:textColor="#c6c6c6"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/notification_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:textColor="#c6c6c6"
        android:textSize="20sp"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>

